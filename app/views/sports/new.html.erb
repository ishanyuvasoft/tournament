<h1>Sports New</h1>

<%= form_with model: @sport , url: sports_path, method: :post do |u| %>

 <div>
 	 <%= u.label :sport_name %><br>
    <%= u.text_field :sport_name %>
 </div>

 <div>
 	 <%= u.label :sport_type %><br>
    <%= u.text_field :sport_type %>
 </div>

 <div>
 	 <%= u.label :no_of_players %><br>
    <%= u.text_field :no_of_players %>
 </div>

 <div>
    <%= u.label :date %><br>
    <%= u.date_field :date %>
 </div>

 <div>
	<%= u.submit "Submit" %>
   <%= link_to "Back", root_path %>
	
</div>

<% end %>


